  <div class="community-background">
    <%= attachment_image_tag @community, :community_image, format: 'jpeg', fallback: "sunset_mountains.jpg" %>
  </div>
  <div class="community-info">
    <%= render 'communities/info', community: @community, currentUser: @currentUser %>
  </div>
  <div class="community-main">
    <p class="page-title">ペナルティ実行完了の許可</p>
    <p>完了したペナルティ：<%= @penalty.content %></p>
    <p>回復ポイント：<%= @penalty.point %></p>
    <div>
      <%= form_with model: @standby, url: community_penalty_execute_path(@community.id, @penalty.id), local:true do |f| %>
        <div>
          <label><%= f.label :executed_user_id, "ペナルティ完了を許可してもらうユーザー" %><span class="form-note">必須</span></label>
          <div>
            <%= f.collection_select :executed_user_id, User.joins(:community_users).where(community_users: {community_id: params[:community_id]}), :id, :name, include_blank: "ユーザーを選択してください" %>
          </div>
        </div>
        <div>
          <%= f.submit '実行完了申請' %>
        </div>
      <% end %>
    </div>
  </div>