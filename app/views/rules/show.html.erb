  <div class="community-background">
    <% if @community.community_image.attached? %>
      <%= image_tag @community.community_image %>
    <% end %>
  </div>
  <div class="community-info">
    <%= render 'communities/info', community: @community, currentUser: @currentUser %>
  </div>
  <div class="community-main">
    <p class="page-title">ルール詳細</p>
    <div>
      <p>内容：<%= @rule.content %></p>
      <p>ポイント増減：<%= @rule.point %></p>
      <p>ジャンル：<%= @rule.genre %></p>
      <p>ルール対象メンバー：
        <% @rule.users.each do |user| %>
          <%= user.name %>
        <% end %>
      </p>
      <p>作成者：<%= @rule.creating_user.name %></p>
      <p>作成日：<%= @rule.created_at.strftime('%Y/%m/%d') %></p>
      <p>最終更新者：
        <% if @rule.updating_user.present? %>
          <%= @rule.updating_user.name %>
        <% else %>
          更新なし
        <% end %>
      </p>
    </div>
    <div>
      <p><%= link_to "編集", edit_community_rule_path(@community.id, @rule.id) %></p>
      <p><%= link_to "削除", community_rule_path(@community.id, @rule.id), method: :delete %></p>
    </div>
  </div>