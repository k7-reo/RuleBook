  <div class="page-title"><%= @user.name %>宛の受信BOX</div>

  <div class="excuted-rules">
    <div class="section-title">実行されたルール</div>
    <% if @standbyRules.present? %>
      <table>
        <thead>
          <tr>
            <th>コミュニティ</th>
            <th>申請者</th>
            <th>ルール</th>
            <th>加減ポイント</th>
            <th>申請日時</th>
            <th>補足</th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
          <% @standbyRules.each do |standby| %>
          <tr>
            <td><%= link_to standby.community.community_name, community_path(standby.community_id) %></td>
            <td><%= standby.executing_user.name %></td>
            <td><%= standby.content %></td>
            <td><%= standby.point %></td>
            <td><%= standby.rule.created_at.to_s(:datetime_jp) %></td>
            <td><%= standby.detail %></td>
            <td>
              <%= link_to "承認する", approval_path(standby) %> <!-- 一つのstandbyレコードのみcotrollerに送りたい -->
            　<%= link_to "否認する", denial_path(standby)  %> <!-- 一つのstandbyレコードのみcotrollerに送りたい -->
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="alt-text">あなたに対して実行されたルールはありません。</div>
    <% end %>
  </div>
  <div class="excuted-penalties">
    <div class="section-title">ペナルティ完了確認の依頼</div>
    <% if @standbyPenalties.present? %>
      <table>
        <thead>
          <tr>
            <td>コミュニティ</td>
            <td>申請者</td>
            <td>完了内容</td>
            <td>回復ポイント</td>
            <td>申請日時</td>
            <td colspan="2"></td>
          </tr>
        </thead>
        <tbody>
          <% @standbyPenalties.each do |standby| %>
          <tr>
            <td><%= link_to standby.community.community_name, community_path(standby.community_id) %></td>
            <td><%= standby.executing_user.name %></td>
            <td><%= standby.content %></td>
            <td><%= standby.point %></td>
            <td><%= standby.penalty.created_at.to_s(:datetime_jp) %></td>
            <td><%= link_to '承認する', forgive_path(standby) %></td>
            <td><%= link_to '否認する', forbid_path(standby) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="alt-text">あなたに送られたペナルティ完了の許可依頼はありません。</div>
    <% end %>
    </div>
  <div class="join-requests">
    <div class="section-title">オーナーコミュニティへの参加申請</div>
    <% if @unacceptedUsers.present? %>
      <table>
        <thead>
          <tr>
            <td>コミュニティ</td>
            <td>参加希望ユーザー</td>
            <td colspan="2"></td>
          </tr>
        </thead>
        <tbody>
          <% @unacceptedUsers.each do |users| %>
          <tr>
            <td><%= users.community.community_name %></td>
            <td><%= users.user.name %></td>
            <td><%= link_to "参加を許可する", accept_path(users.id) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="alt-text">参加依頼はありません。</div>
    <% end %>
  </div>