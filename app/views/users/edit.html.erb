<h2>個人情報変更</h2>

<div>
  <%= form_with model: @user, local:true do |f| %>
    <label for="inputName">ユーザーネーム</label>
    <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"ユーザー名" %>
    <label for="inputEmail">メールアドレス</label>
    <%= f.text_field :email, id:"inputEmail", placeholder:"メールアドレス" %>
    <label for="inputImage">プロフィール画像</label>
    <%= attachment_image_tag @user, :profile_image, :fill, 60, 60 %>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
    <p><%= f.submit "編集完了" %></p>
  <% end %>
</div>

<div>
  <%= link_to "TOPへ", top_path %>
</div>