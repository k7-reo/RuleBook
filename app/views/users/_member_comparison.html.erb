      <% @communityUsers.each do |user| %>
        <div class="comparison-each">
          <div class="comparison-each-image">
            <% if user.user.profile_image.attached? %>
              <%= image_tag user.user.profile_image.variant(resize: "40x40"), class: "community-member-profile-image" %>
            <% else %>
              <%= image_tag("f_f_event_98_s512_f_event_98_0bg.jpg", style: "width: 40px; height: 40px;", class: "community-member-profile-image") %>
            <% end %>
          </div>
          <div class="comparison-each-figure"><%= user.monthly_point %></div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="comparison-section">
    <div class="comparison-title">ルール作成数</div>
